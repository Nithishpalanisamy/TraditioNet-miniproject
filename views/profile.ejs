<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <base href="http://localhost:5000/">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/css/profile.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
</head>
<body>
    <div id="header-container"></div>

    <div class="container">
        <!-- Profile Info Section -->
        <div class="profile-container">
            <div class="profile-info">
                <img src="<%= userphoto %>" alt="Profile Photo" class="profile-photo">
                <div class="info-details">
                    <p><strong>Name:</strong> <%= username %></p>
                    <p><strong>Email:</strong> <%= email %></p>
                    <p><strong>Location:</strong> <%= location %></p>
                    <p><strong>Interests:</strong> <%= interests %></p>
                </div>
                <button id="editProfileBtn" class="edit-button">Edit Profile</button>

                <!-- Dialog box for editing profile -->
                <div id="editProfileDialog" class="dialog" style="display:none;">
                    <form action="/profile/<%= email %>/edit" method="POST" enctype="multipart/form-data">
                        <div class="dialog-header">
                            <h2>Edit Profile</h2>
                            <button type="button" class="close-btn" onclick="closeDialog()">X</button>
                        </div>
                        <label for="location">Location:</label>
                        <input type="text" name="location" value="<%= location %>">
                        
                        <label for="interests">Interests:</label>
                        <textarea name="interests"><%= interests %></textarea>
                        
                        <label for="userphoto">Profile Photo:</label>
                        <input type="file" name="userphoto">
                        
                        <button type="submit" class="save-button">Save</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Posts Section -->
        <div class="main-content">
            <center><h2 class="posts-title">User Posts</h2></center>
            <div class="posts">
                <% posts.forEach(function(post) { %>
                    <div class="post-card">
                        <div class="post-photo">
                            <img src="<%= post.photo %>" alt="Post Photo">
                        </div>
                        <div class="post-details">
                            <h3 class="post-topic"><%= post.topic %></h3>
                            <p class="post-paragraph"><%= post.paragraph %></p>
                            <div class="post-footer">Posted on <%= new Date(post.createdAt).toLocaleDateString() %></div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
    <div id="footer-container"></div>
    <script>
        document.getElementById('editProfileBtn').addEventListener('click', function() {
            document.getElementById('editProfileDialog').style.display = 'block';
        });

        function closeDialog() {
            document.getElementById('editProfileDialog').style.display = 'none';
        }
    </script>
    <script src="/javascript/header.js"></script>
    <script src="/javascript/profile.js"></script>
    <script src="/javascript/footer.js"></script>
</body>
</html>
