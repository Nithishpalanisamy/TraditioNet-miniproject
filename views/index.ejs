<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TraditioNet-Blogs</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/postblog.css">
</head>
<body>
    <div id="header-container"></div>

    <div class="header-container">
        <h1>POST Your Thoughts on Indian Traditions</h1>
        <button id="createPostBtn">Create a Post</button>
    </div>

    <!-- Post Form Dialog -->
    <div id="postFormDialog" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Create a Post</h2>
            <form id="postForm" action="/post" method="POST" enctype="multipart/form-data">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required readonly>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required readonly>

                <label for="photo">Photo:</label>
                <input type="file" id="photo" name="photo">

                <label for="topic">Topic:</label>
                <input type="text" id="topic" name="topic" required>

                <label for="paragraph">Paragraph:</label>
                <textarea id="paragraph" name="paragraph" rows="4" required></textarea>

                <button type="submit">Submit</button>
            </form>
        </div>
    </div>

    <div id="post-container">
        <% posts.forEach(post => { %>
            <div class="card">
                <div class="card-top">
                    <div class="profile-info">
                        <% const userProfile = profileMap[post.email]; %>
                        <img src="<%= userProfile && userProfile.userphoto ? userProfile.userphoto : '/images/i2.jpg' %>" alt="Profile Image" class="profile-photo">
                        <div class="user-details">
                            <h3 class="username"><%= post.username %></h3>
                            <p class="email"><%= post.email %></p>
                        </div>
                    </div>
                    <button class="report-button" data-post-id="<%= post._id %>">Report</button>
                </div>
                <div class="card-bottom">
                    <div class="post-image-container">
                        <% if (post.photo) { %>
                            <img src="<%= post.photo %>" alt="Post Image" class="post-image">
                        <% } else { %>
                            <img src="/images/i2.jpg" alt="Default Image" class="post-image">
                        <% } %>
                    </div>
                    <div class="card-paragraph">
                        <p><%= post.paragraph %></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    
    
    
    
    <!--footer-->
    <div id="footer-container"></div>


    <script src="javascript/postblog.js"></script>
    <script src="javascript/header.js"></script>
    <script src="javascript/footer.js"></script>
</body>
</html>
