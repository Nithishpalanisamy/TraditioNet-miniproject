<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TraditioNet-Blogs</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/postblog.css">
</head>
<body>
    <div id="header-container"></div>

    <div class="header-container">
        <h1>POST Your Thoughts on Indian Traditions</h1>
        <button id="createPostBtn">Create a Post</button>
    </div>

    <!-- Post Form Dialog -->
    <div id="postFormDialog" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Create a Post</h2>
            <form id="postForm" action="/post" method="POST" enctype="multipart/form-data">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username" required readonly>
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required readonly>

                <label for="photo">Photo:</label>
                <input type="file" id="photo" name="photo">

                <label for="topic">Topic:</label>
                <input type="text" id="topic" name="topic" required>

                <label for="paragraph">Paragraph:</label>
                <textarea id="paragraph" name="paragraph" rows="4" required></textarea>

                <button type="submit">Submit</button>
            </form>
        </div>
    </div>

    <div id="post-container">
        <!-- This is where the list of posts will be rendered -->
        <div id="post-container">
            <% posts.forEach(post => { %>
                <div class="card">
                    <% if (post.photo) { %>
                        <img src="<%= post.photo %>" alt="Post Image">
                    <% } else { %>
                        <img src="../public/images/i2.jpg" alt="Default Image">
                    <% } %>
                    <div class="card-super-content">
                        <div class="card-paragraph">
                            <p><%= post.paragraph %></p>
                        </div>
                        <div class="card-footer">
                            <div>
                                <h3><%= post.username %></h3>
                                <p class="email"><%= post.email %></p>
                              <!-- Report Button -->
                                <button class="report-button" data-post-id="<%= post._id %>">Report</button>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
            
        
    </div>   
    <!--footer-->
    <div id="footer-container"></div>


    <script src="javascript/postblog.js"></script>
    <script src="javascript/header.js"></script>
    <script src="javascript/footer.js"></script>
    <script>
        const username = localStorage.getItem('username');
        const email = localStorage.getItem('email');
        
        // Set the values of the input fields and make them read-only
        document.getElementById('username').value = username;
        document.getElementById('email').value = email;
    </script>
</body>
</html>
